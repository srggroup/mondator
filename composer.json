{
    "name": "mongator/mondator",
    "description": "Easy and flexible class generator for PHP",
    "keywords": ["class-generator"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name":  "Máximo Cuadros",
            "email": "maximo@yunait.com"
        },
        {
            "name":  "Pablo Díez",
            "email": "pablodip@gmail.com"
        },
        {
            "name":  "Ádám Bálint",
            "email": "adam.balint@srg.hu"
        }
    ],
	"repositories": [
		{
			"type": "composer",
			"url": "https://composer.srggroup.dev/"
		}
	],
    "require": {
        "php":       "^8.4",
        "twig/twig": "^3.21"
    },
	"require-dev": {
		"srggroup/srg_standards": "v2.0.0",
		"dealerdirect/phpcodesniffer-composer-installer": "^v1.1.2",
		"vimeo/psalm": "^6.13.1"
	},
    "autoload": {
        "psr-0": { "Mandango\\Mondator\\": "src/" }
    },
	"extra": {
		"phpcodesniffer-search-depth": 5
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
